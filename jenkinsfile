pipeline {
    agent any

    environment {
        GIT_CREDENTIALS = credentials('github-token')
    }

    stages {
        stage('Clone') {
            steps {
                git credentialsId: 'github-token', url: 'https://github.com/GurumoorthysHub/simple-nodejs-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t guru615/node .'
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'Pushing Docker image to Docker Hub...'
                sh 'docker push guru615/node:latest'
            }
        }

        stage('Run App') {
            steps {
                echo 'Running the application in Docker container...'
                sh 'docker stop simple-node-app || true'
                sh 'docker rm simple-node-app || true'
                sh 'docker run -d --name simple-node-app -p 8080:8080 guru615/node:latest'
            }
        }
    }
}

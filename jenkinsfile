pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'guru615/node'
        DOCKER_TAG = 'latest'
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/GurumoorthysHub/Simple-node-js.git'
            }
        }
        stage('Build & Test') {
            steps {
                sh 'npm install'
                sh 'npm test'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").run('-d -p 3000:3000')
                }
            }
        }
    }
    post {
        success {
            echo 'Build, test, image build, and container run succeeded!'
            // Add email or Slack notification steps here
        }
        failure {
            echo 'Build failed.'
            // Add notification for failures here
        }
    }
}

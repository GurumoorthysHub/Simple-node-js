pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'guru615/node'
        DOCKER_TAG = 'latest'
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/GurumoorthysHub/Simple-node-js.git'
            }
        }
        stage('Build & Test') {
            steps {
                sh 'npm install'
                sh 'npm test || echo "Tests skipped or not configured"'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").run('-d -p 3000:3000')
                }
            }
        }
    }
    post {
        success {
            echo 'Build, test, image build, and container run succeeded!'
            // **Email Notification on Success**
            emailext(
                subject: "Build SUCCESS: ${JOB_NAME} #${BUILD_NUMBER}",
                body: "All CI stages completed successfully!\nView details: ${BUILD_URL}",
                to: 'gurumoorthy.s2004@gmail.com'
            )
        }
        failure {
            echo 'Build failed.'
            // **Email Notification on Failure**
            emailext(
                subject: "Build FAILURE: ${JOB_NAME} #${BUILD_NUMBER}",
                body: "There was a CI failure.\nView details: ${BUILD_URL}",
                to: 'gurumoorthy.s2004@gmail.com'
            )
        }
    }
}
